        <comment>
            Creating the iclm_bill table
        </comment>
        <createTable tableName="iclm_bill">
            <column name="iclm_bill_id" type="int">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="start_date" type="DATETIME">
